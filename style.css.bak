html {
    margin-left: 21em;
    margin-right: 21em;
    margin-top: 2em;
}

@media only screen and (max-width: 500px), 
       only screen and (min-device-width: 768)
                   and (max-device-width: 1024px) {
    #left-border, #right-border { display: none; }
}

#left-border, #right-border {
    position: fixed;
    top: 0;
    bottom: 0;
    width: 22em;
    border-width: .25em;
    border-color: #3b658a;
    background-color: #6283a1;
    /*background-color: #e5e5e5;*/ /*grey color*/
}

#left-border { 
    left: 0;
    border-right-style: solid;
    box-shadow: inset -2em 0 3em -2em #3b658a;
}

#right-border { 
    right: 0; 
    border-left-style: solid;
    box-shadow: inset 2em 0 3em -2em #3b658a;
}

.page-break {
    border-bottom-style: solid;
    border-color: #3b658a;
    margin: 0;
    padding: 0;
}

header {
    margin: 0 auto;
    text-align: center;
}

header h1 {
    font-family: "Droid Serif", serif;
    margin-bottom: .5em; 
}

header h1 a {
    text-decoration: none;
    font-size: 1.5em;
    color: black;
}

header nav {
    margin: 18px 0;
    padding-bottom: 5px;
    border-bottom: 4px solid #000;
    /*width: 40em;*/
